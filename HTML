<script>
// ---------------- Live Rover Info ----------------
async function updateStatus(){
  try {
    const res = await fetch('/status');
    const data = await res.json();
    document.getElementById('battery').innerText =
      "Battery: " + data.battery + " V (" + data.percent + "%)";
    document.getElementById('mine').innerText =
      "Mine: " + (data.mineDetected ? "⚠️ Detected" : "None");
    document.getElementById('gps').innerText =
      "GPS: " + data.gps;
    document.getElementById('distance').innerText =
      "Distance: " + data.distance + " cm";
  } catch(e) {
    console.log("Status update failed");
  }
}
setInterval(updateStatus, 1000);
updateStatus();

// ---------------- Auto button toggle ----------------
function toggleAuto(type){
  fetch('/'+type).then(()=>updateBtn(type));
}
function updateBtn(type){
  fetch('/'+type+'Status').then(r=>r.text()).then(t=>{
    let btn = document.getElementById(
      type=='auto'?'autoDriveBtn':type=='autoCam'?'autoCamBtn':'sweepBtn'
    );
    if(t=='ON'){ btn.classList.add('active'); }
    else{ btn.classList.remove('active'); }
  });
}
setInterval(()=>{updateBtn('auto');updateBtn('autoCam');updateBtn('sweep');},1000);

// ---------------- Camera Stream ----------------
const video = document.getElementById('camFeed');
video.src = 'http://192.168.4.2:81/stream'; // <-- your ESP-CAM IP and port

// ---------------- TensorFlow.js + COCO-SSD ----------------
let model;
cocoSsd.load().then(m=>{
  model = m;
  console.log("Model loaded");
  detect();
});

async function detect(){
  if(model){
    const predictions = await model.detect(video);
    predictions.forEach(p=>{
      if(p.class === 'person'){
        console.log('Person detected:', p);
      }
    });
  }
  requestAnimationFrame(detect);
}
</script>
