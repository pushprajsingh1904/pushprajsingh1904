<script>
// ---------------- Live Rover Info ----------------
function updateStatus(){
  fetch('/status').then(r=>r.json()).then(data=>{
    document.getElementById('battery').innerText="Battery: "+data.battery+" V ("+data.percent+"%)";
    document.getElementById('obstacle').innerText="Obstacle: "+data.distance+" cm";
    document.getElementById('gps').innerText="GPS: "+data.gps;
  });
}
setInterval(updateStatus,500);

// ---------------- Auto button toggle ----------------
function toggleAuto(type){
  fetch('/'+type).then(()=>updateBtn(type));
}
function updateBtn(type){
  fetch('/'+type+'Status').then(r=>r.text()).then(t=>{
    let btn = document.getElementById(type=='auto'?'autoDriveBtn':type=='autoCam'?'autoCamBtn':'sweepBtn');
    if(t=='ON'){ btn.classList.add('active'); }
    else{ btn.classList.remove('active'); }
  });
}
setInterval(()=>{updateBtn('auto');updateBtn('autoCam');updateBtn('sweep');},500);

// ---------------- Camera Stream ----------------
const video = document.getElementById('camFeed');
video.src = 'http://192.168.4.2:80/stream'; // Replace with your ESP-CAM IP

// ---------------- TensorFlow.js + COCO-SSD ----------------
let model;
cocoSsd.load().then(m=>{ model=m; console.log("Model loaded"); detect(); });

async function detect(){
  if(model){
    const predictions = await model.detect(video);
    predictions.forEach(p=>{
      if(p.class==='person'){
        // enemy logic: highlight red if black clothes, green otherwise
        console.log('Person detected:',p);
      }
    });
  }
  requestAnimationFrame(detect);
}
</script>
